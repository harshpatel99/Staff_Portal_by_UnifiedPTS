<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_color_home"
    tools:context=".fragment.ApplyForLeaveFragment">

    <ImageView
        android:id="@+id/appleForLeaveBackImageView"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/round_arrow_back_24"
        android:tint="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/white" />

    <TextView
        android:id="@+id/appleForLeavePrimaryTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/apply_for_leave"
        android:textSize="@dimen/app_title_text_size"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/appleForLeaveBackImageView"
        app:layout_constraintStart_toEndOf="@id/appleForLeaveBackImageView"
        app:layout_constraintTop_toTopOf="@id/appleForLeaveBackImageView" />

    <ImageView
        android:id="@+id/appleForLeaveCornerImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp"
        android:src="@drawable/top_rounded_corners"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toEndOf="@id/appleForLeavePrimaryTextView"
        app:layout_constraintTop_toBottomOf="@id/appleForLeavePrimaryTextView" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/appleForLeaveTimeDetailsCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="32dp"
        app:cardBackgroundColor="@color/secondary"
        app:cardCornerRadius="@dimen/corner_radius_card_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@color/black"
        app:strokeWidth="2dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/appleForLeaveFromTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp"
                android:textColor="@color/black"
                android:text="From"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/appleForLeaveFromSelectTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="32dp"
                android:background="@drawable/rounded_corners"
                android:backgroundTint="@color/secondaryDark"
                android:paddingStart="8dp"
                android:paddingTop="4dp"
                android:paddingEnd="8dp"
                android:paddingBottom="4dp"
                android:textColor="@color/white"
                android:text="Select"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@id/appleForLeaveFromTitleTextView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/appleForLeaveFromTitleTextView" />

            <TextView
                android:id="@+id/appleForLeaveToTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:text="To"
                android:textSize="16sp"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/appleForLeaveFromTitleTextView" />

            <TextView
                android:id="@+id/appleForLeaveToSelectTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_corners"
                android:backgroundTint="@color/secondaryDark"
                android:paddingStart="8dp"
                android:paddingTop="4dp"
                android:textColor="@color/white"
                android:paddingEnd="8dp"
                android:paddingBottom="4dp"
                android:text="Select"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@id/appleForLeaveToTitleTextView"
                app:layout_constraintEnd_toEndOf="@id/appleForLeaveFromSelectTextView"
                app:layout_constraintStart_toStartOf="@id/appleForLeaveFromSelectTextView"
                app:layout_constraintTop_toTopOf="@id/appleForLeaveToTitleTextView" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/appleForLeaveOtherDetailsCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="32dp"
        app:cardBackgroundColor="@color/secondary"
        app:cardCornerRadius="@dimen/corner_radius_card_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appleForLeaveTimeDetailsCardView"
        app:strokeColor="@color/black"
        app:strokeWidth="2dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/appleForLeaveTypeOfLeaveTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:textColor="@color/black"
                android:gravity="center"
                android:text="Type of Leave"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/appleForLeaveReasonTextInputLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="24dp"
                android:hint="@string/otp"
                app:boxCornerRadiusBottomEnd="@dimen/corner_radius_text_input_layout"
                app:boxCornerRadiusBottomStart="@dimen/corner_radius_text_input_layout"
                app:boxCornerRadiusTopEnd="@dimen/corner_radius_text_input_layout"
                app:boxCornerRadiusTopStart="@dimen/corner_radius_text_input_layout"
                app:layout_constraintEnd_toEndOf="parent"
                app:hintTextColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/appleForLeaveTypeOfLeaveTextView">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/appleForLeaveReasonTextInputEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/appleForLeaveAttachDocumentTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:gravity="center"
                android:text="No Documents Attached"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/appleForLeaveReasonTextInputLayout" />

            <TextView
                android:id="@+id/appleForLeaveAttachDocumentTimeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="32dp"
                android:background="@drawable/rounded_corners"
                android:backgroundTint="@color/secondaryDark"
                android:gravity="center"
                android:paddingStart="8dp"
                android:paddingTop="4dp"
                android:paddingEnd="8dp"
                android:paddingBottom="4dp"
                android:text="Attach"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@id/appleForLeaveAttachDocumentTitleTextView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/appleForLeaveAttachDocumentTitleTextView" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/appleForLeaveApplyButtonTextView"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="@color/primary"
        android:gravity="center"
        android:padding="12dp"
        android:textColor="@color/white"
        android:text="Apply"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appleForLeaveOtherDetailsCardView" />

</androidx.constraintlayout.widget.ConstraintLayout>